# Payroll Management System - Environment Configuration Example
# Copy this file to .env and update the values as needed

# SERVER CONFIGURATION
PORT=3000
NODE_ENV=development

# SECURITY SETTINGS
SESSION_SECRET=your_very_secure_session_secret_key_here_change_this_in_production
BCRYPT_ROUNDS=10

# DATABASE CONFIGURATION
DB_PATH=./data.sqlite

# APPLICATION SETTINGS
APP_NAME=Payroll Management System
APP_URL=http://localhost:3000

# EMAIL CONFIGURATION (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@payroll.local

# FILE UPLOAD SETTINGS (Optional)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# LOGGING CONFIGURATION
LOG_LEVEL=info
